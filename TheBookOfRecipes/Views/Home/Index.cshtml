@{
    ViewData["Title"] = "Home";
}

<h1>Welcome to The Book of Recipes</h1>
<p>Discover delicious recipes and explore various categories!</p>

<div>
    <h2>Random Recipes</h2>
    <div class="row">
        @foreach (var recipe in ViewBag.RandomRecipes)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="~/@recipe.ImageUrl" class="card-img-top" alt="@recipe.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text">@recipe.Description</p>
                        <a asp-action="Details" asp-route-id="@recipe.RecipeId" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    <h2>Recipes by Ingredient</h2>
    @foreach (var ingredient in ViewBag.RecipesByIngredient.Keys)
    {
        <h3>@ingredient</h3>
        <div class="row">
            @foreach (var recipe in ViewBag.RecipesByIngredient[ingredient])
            {
                <div class="col-md-4">
                    <div class="card">
                        <img src="~/@recipe.ImageUrl" class="card-img-top" alt="@recipe.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Name</h5>
                            <p class="card-text">@recipe.Description</p>
                            <a asp-action="Details" asp-route-id="@recipe.RecipeId" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>