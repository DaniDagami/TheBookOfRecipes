@model ApplicationUser

<link href="~/css/every-page.css" rel="stylesheet" />
<link href="~/css/forms.css" rel="stylesheet" />

<style>
    .form-group {
        flex-direction: row;
        gap: 1em;
        align-items: center;
    }
</style>
<h1 class="dark-blue-text text-align-center">User Profile</h1>

<form class="form" asp-action="Register" method="post">
    <div class="form-group">
        <label class="dark-blue-text" asp-for="UserName">Username: </label>
        <h3 class="light-blue-text">@Model.UserName</h3>
    </div>
    <div class="form-group">
        <label class="dark-blue-text" asp-for="Email">Email: </label>
        <h3 class="light-blue-text">@Model.Email</h3>
    </div>
    <div class="form-group">
        <label class="dark-blue-text" asp-for="FirstName">First name: </label>
        <h3 class="light-blue-text">@Model.FirstName</h3>
    </div>
    <div class="form-group">
        <label class="dark-blue-text" asp-for="LastName">Last name: </label>
        <h3 class="light-blue-text">@Model.LastName</h3>
    </div>
    <div class="form-group">
        <a class="light-blue-text" asp-controller="Account" asp-action="Edit">Edit Profile</a>
        <a class="light-blue-text" asp-controller="Account" asp-action="Logout">Logout</a>
    </div>
</form>
